<com.example.borderlinesample.ColoredBorderedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:id="@+id/container"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/buttonRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textColor="#c60000"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray"
        android:textColor="#505050"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/buttonOrange"
        android:textColor="#f05c15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange Cool"
        tools:ignore="HardcodedText" />

</com.example.borderlinesample.ColoredBorderedLayout>